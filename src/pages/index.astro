---
import MainLayout from "../layouts/MainLayout.astro"
import FAQ from "../components/FAQ.astro"
import RecipeCard from "../components/RecipeCard.astro";
import { Icon } from "astro-icon/components";
import { HOMEPAGE_ARTICLE_LIMIT } from "../constants";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const allRecipes: CollectionEntry<'recipes'>[] = (await getCollection('recipes'))
  .sort((a:CollectionEntry<'recipes'>, b:CollectionEntry<'recipes'>) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<MainLayout>
      
      <!--Hero Section-->
      <section
        class="flex flex-col justify-between gap-6 pt-28 sm:gap-10 sm:pt-40 md:gap-16 xl:gap-0 lg:flex-row lg:pt-16 xl:pt-12 2xl:pt-10 "
      >
        <!-- Content Start -->
        <div
          class="flex flex-col justify-center sm:text-center lg:py-12 lg:text-left xl:py-24"
        >
          <h1
            class="mb-3 text-balance bg-gradient-to-r from-[#F37335] to-[#F0B429] bg-clip-text text-4xl font-bold text-transparent sm:text-5xl/[1.1] md:mb-6 md:text-6xl/[1.1] dark:from-[#F7971E] dark:to-primary"
          >
            OpenStove — Your Open Source Recipe Library
          </h1>

          <p
            class="mb-8 text-pretty leading-relaxed text-stone-600  dark:text-stone-400 md:mb-12 md:text-lg lg:w-4/5 2xl:text-xl"
          >
            A community-driven kitchen where discovery and sharing of recipes
            come free from clutter. Cook, enjoy, and add your own flavors.
          </p>

          <!-- Buttons Container Start -->
          <div
            class="flex flex-col gap-2.5 sm:flex-row sm:justify-center lg:justify-start"
          >
            <a
              class="inline-block rounded-xl bg-secondary border-2 border-secondary px-8 py-3 text-center text-sm font-medium text-orange-900 outline-none transition duration-300 dark:hover:text-secondary hover:bg-transparent hover:-translate-y-1 focus-visible:-translate-y-1 md:text-base 2xl:text-lg"
              href="about/#contribution"
              >How to Contribute?</a
            >

            <a
              class="inline-block rounded-xl bg-primary border-2 border-primary px-8 py-3 text-center text-sm font-semibold text-[#422006] outline-none transition duration-300 hover:-translate-y-1 hover:shadow-2xl hover:shadow-primary focus-visible:-translate-y-1 md:text-base 2xl:text-lg"
              href="#recipeCards"
              >Explore Recipes</a
            >
          </div>
          <!--  End Buttons Container -->
        </div>
        <!-- End Content -->

        <!-- Image Start -->
        <div
          class="flex w-full items-center justify-center"
        >
          <Icon class="h-auto w-full" name="hero-image" />
        </div>
        <!-- End Image -->
      </section>
      <!-- End Hero -->

      <!-- Heading Section -->
      <div class="relative my-10 overflow-hidden rounded-xl">
        <!-- Gradients -->
        <div
          aria-hidden="true"
          class="absolute -top-96 start-1/2 flex -translate-x-1/2 transform"
        >
          <div
            class="h-[44rem] w-[25rem] -translate-x-[10rem] rotate-[-60deg] transform bg-gradient-to-r from-[#F37335] to-[#F0B429] blur-3xl dark:from-[#F7971E] dark:to-primary"
          ></div>
          <div
            class="rounded-fulls h-[50rem] w-[90rem] origin-top-left -translate-x-[15rem] -rotate-12 bg-gradient-to-tl from-[#ffa751] via-[#F2C94C] to-[#ffa751] blur-3xl dark:from-primary dark:via-[#FF725E] dark:to-secondary"
          ></div>
        </div>
        <!-- End Gradients -->

        <div class="relative z-10">
          <div class="mx-auto px-4 py-10 sm:px-6 lg:px-8 lg:py-16">
            <div class="mx-auto max-w-screen-md text-center">
              <p
                class="inline-block bg-gradient-to-l from-[#FF512F] to-[#F09819] bg-clip-text text-sm lg:text-base font-medium text-transparent dark:from-[#ffd38c] dark:to-[#fda263]"
              >
                Discover, Cook, Cherish — Together
              </p>

              <!-- Title -->
              <div class="mx-auto mt-5 max-w-screen-md">
                <h2
                  class="block text-balance text-4xl font-semibold text-dark md:text-5xl dark:text-stone-100"
                >
                  Harvest the Best of Global Kitchens
                </h2>
              </div>
              <!-- End Title -->

              <div class="mx-auto mt-5 max-w-screen-md">
                <p
                  class="mx-auto max-w-screen-md text-pretty text-lg text-stone-600 2xl:text-xl dark:text-stone-200"
                >
                  OpenStove is a home of culinary exploration and shared passion
                  for cooking. Browse, enjoy, and become part of our
                  flavor-filled community by contributing your culinary art. No
                  frills; just the essence of cooking.
                </p>
              </div>
              <!-- Button Start-->
              <div class="mt-8 flex justify-center gap-3">
                <a
                  class="inline-flex items-center justify-center gap-x-3 rounded-xl border border-transparent bg-secondary-accent px-4 py-3 text-center text-sm font-medium text-orange-800 transition duration-300 hover:bg-secondary hover:shadow-2xl hover:shadow-secondary focus:outline-none focus-visible:-translate-y-1 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-secondary 2xl:text-base"
                  href="https://github.com/mearashadowfax/OpenStove"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <svg
                    class="w-4.5 h-4.5"
                    height="16"
                    viewBox="0 0 438.549 438.549"
                    width="16"
                  >
                    <path
                      class="fill-current"
                      d="M409.132 114.573c-19.608-33.596-46.205-60.194-79.798-79.8-33.598-19.607-70.277-29.408-110.063-29.408-39.781 0-76.472 9.804-110.063 29.408-33.596 19.605-60.192 46.204-79.8 79.8C9.803 148.168 0 184.854 0 224.63c0 47.78 13.94 90.745 41.827 128.906 27.884 38.164 63.906 64.572 108.063 79.227 5.14.954 8.945.283 11.419-1.996 2.475-2.282 3.711-5.14 3.711-8.562 0-.571-.049-5.708-.144-15.417a2549.81 2549.81 0 01-.144-25.406l-6.567 1.136c-4.187.767-9.469 1.092-15.846 1-6.374-.089-12.991-.757-19.842-1.999-6.854-1.231-13.229-4.086-19.13-8.559-5.898-4.473-10.085-10.328-12.56-17.556l-2.855-6.57c-1.903-4.374-4.899-9.233-8.992-14.559-4.093-5.331-8.232-8.945-12.419-10.848l-1.999-1.431c-1.332-.951-2.568-2.098-3.711-3.429-1.142-1.331-1.997-2.663-2.568-3.997-.572-1.335-.098-2.43 1.427-3.289 1.525-.859 4.281-1.276 8.28-1.276l5.708.853c3.807.763 8.516 3.042 14.133 6.851 5.614 3.806 10.229 8.754 13.846 14.842 4.38 7.806 9.657 13.754 15.846 17.847 6.184 4.093 12.419 6.136 18.699 6.136 6.28 0 11.704-.476 16.274-1.423 4.565-.952 8.848-2.383 12.847-4.285 1.713-12.758 6.377-22.559 13.988-29.41-10.848-1.14-20.601-2.857-29.264-5.14-8.658-2.286-17.605-5.996-26.835-11.14-9.235-5.137-16.896-11.516-22.985-19.126-6.09-7.614-11.088-17.61-14.987-29.979-3.901-12.374-5.852-26.648-5.852-42.826 0-23.035 7.52-42.637 22.557-58.817-7.044-17.318-6.379-36.732 1.997-58.24 5.52-1.715 13.706-.428 24.554 3.853 10.85 4.283 18.794 7.952 23.84 10.994 5.046 3.041 9.089 5.618 12.135 7.708 17.705-4.947 35.976-7.421 54.818-7.421s37.117 2.474 54.823 7.421l10.849-6.849c7.419-4.57 16.18-8.758 26.262-12.565 10.088-3.805 17.802-4.853 23.134-3.138 8.562 21.509 9.325 40.922 2.279 58.24 15.036 16.18 22.559 35.787 22.559 58.817 0 16.178-1.958 30.497-5.853 42.966-3.9 12.471-8.941 22.457-15.125 29.979-6.191 7.521-13.901 13.85-23.131 18.986-9.232 5.14-18.182 8.85-26.84 11.136-8.662 2.286-18.415 4.004-29.263 5.146 9.894 8.562 14.842 22.077 14.842 40.539v60.237c0 3.422 1.19 6.279 3.572 8.562 2.379 2.279 6.136 2.95 11.276 1.995 44.163-14.653 80.185-41.062 108.068-79.226 27.88-38.161 41.825-81.126 41.825-128.906-.01-39.771-9.818-76.454-29.414-110.049z"
                      fill="currentColor"
                    ></path>
                  </svg>
                  Contribute with GitHub
                </a>
              </div>
              <!-- End Button -->
            </div>
          </div>
        </div>
      </div>
      <!-- End Heading -->

      <!-- Recipe Cards Blog -->
      <div id="recipeCards" class="mx-auto max-w-screen-2xl py-10 lg:py-14">
        <!-- Grid -->
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {allRecipes.slice(0, HOMEPAGE_ARTICLE_LIMIT).map(recipe => (
            <RecipeCard recipe={recipe} />
           ))}
        </div>
        <!-- End Grid -->

        <!-- Explore More Button -->
        <div class="mt-12 text-center">
          <a
            class="text-md group inline-flex min-w-64 items-center justify-center gap-x-1 rounded-xl bg-secondary-accent px-4 py-3 font-medium text-orange-800 transition-colors duration-300 hover:bg-secondary focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-secondary disabled:pointer-events-none disabled:opacity-50 2xl:text-lg dark:border-stone-700 dark:bg-stone-700/60 dark:text-stone-300 dark:hover:bg-stone-700 dark:focus:outline-none"
            href="/recipes"
          >
            Explore more
            <svg
              class="h-5 w-5 transition ease-in-out group-hover:translate-x-1"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                clip-rule="evenodd"
                d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z"
                fill-rule="evenodd"
              ></path>
            </svg>
          </a>
        </div>
        <!-- End Explore More Button -->
      </div>
      <!-- End Cards Blog -->

      <!-- Community Card-->
      <div class="mx-auto max-w-screen-lg">
        <div class="py-6 sm:py-8 lg:py-14">
          <!-- Grid -->
          <div
            class="md:grid md:grid-cols-2 md:items-center md:gap-12 xl:gap-32"
          >
            <div class="flex flex-col items-center justify-center">
              <Icon class="h-auto w-full max-w-[27rem]" name="female-chef" />
            </div>

            <!-- image - end -->
            <div class="mt-5 sm:mt-10 lg:mt-0">
              <div class="space-y-6 sm:space-y-8">
                <!-- Title -->
                <div
                  class="mx-auto flex flex-col items-center justify-center px-4 sm:items-start sm:px-6 md:px-0 md:py-24 lg:py-32"
                >
                  <div class="space-y-2 md:space-y-4">
                    <h2
                      class="mx-auto mb-4 text-balance text-center text-2xl font-bold text-dark md:mx-0 md:mb-6 md:text-left md:text-3xl 2xl:text-4xl dark:text-stone-100"
                    >
                      Join Our Cooking Collective
                    </h2>

                    <p
                      class="text-pretty text-center leading-relaxed text-stone-600 sm:text-lg md:text-left 2xl:text-xl dark:text-stone-400"
                    >
                      OpenStove is more than just a recipe site — it's an
                      open-source collaboration where every dish you find here
                      is a gift from fellow food lovers. Have a favorite recipe
                      you'd like to share? We welcome you to add your special
                      touch to our growing collection.
                    </p>
                  </div>
                  <!-- End Title -->
                </div>
              </div>
            </div>
            <!-- End Col -->
          </div>
          <!-- End Grid -->
        </div>
      </div>
      <!-- End Community Card-->

      <FAQ />
   </MainLayout>