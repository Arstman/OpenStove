---
import MainLayout from "../../layouts/MainLayout.astro";
import Tabs from "../../components/Tabs.astro";
import InputNumber from "../../components/InputNumber.astro";
import Clipboard from "../../components/Clipboard.astro";
import Bookmark from "../../components/Bookmark.astro";
import { Image } from "astro:assets";
import misoRamen from "../../images/miso-ramen.avif";
---

<MainLayout title="Recipes | OpenStove">
  <section class="mt-10 pt-6 sm:pt-8 lg:pt-12">
    <!-- Image Start -->
    <div class="mx-auto min-w-full rounded-xl bg-cover">
      <Image
        src={misoRamen}
        class="h-80 w-full rounded-xl object-cover"
        alt="..."
      />
    </div>
    <!-- End Image -->
    <!-- Title Start -->
    <h1
      class="mx-auto mb-4 mt-10 max-w-3xl text-balance text-center text-3xl font-bold text-dark sm:text-4xl md:mb-6 md:text-6xl 2xl:max-w-4xl 2xl:text-7xl dark:text-stone-100"
    >
      Japanese Ramen
    </h1>

    <!-- End Title -->

    <!-- Top Bar Container -->
    <div
      class="mx-auto grid max-w-screen-lg gap-y-5 lg:flex lg:items-center lg:justify-between lg:gap-y-0"
    >
      <!-- Author/Date -->
      <div>
        <ul>
          <li
            class="relative inline-block pe-6 text-base text-dark before:absolute before:end-2 before:top-1/2 before:h-1 before:w-1 before:-translate-y-1/2 before:rounded-full before:bg-stone-400 last:pe-0 last-of-type:before:hidden dark:text-stone-100 dark:before:bg-stone-600"
          >
            mearashadowfax
          </li>
          <li
            class="relative inline-block pe-6 text-xs text-stone-500 before:absolute before:end-2 before:top-1/2 before:h-1 before:w-1 before:-translate-y-1/2 before:rounded-full before:bg-stone-400 last:pe-0 last-of-type:before:hidden dark:text-stone-400 dark:before:bg-stone-600"
          >
            Jan 18, 2024
          </li>
        </ul>
      </div>
      <!-- Author/Date -->

      <!-- Time/Bookmark -->
      <div class="flex items-center justify-end gap-x-1.5">
        <div class="inline-flex w-full max-w-xs gap-x-2">
          <span
            class="font-regular group inline-flex items-center gap-x-2 p-3 text-sm text-dark dark:text-stone-100"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="h-5 w-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
              ></path>
            </svg>
            40 min
          </span>
        </div>

        <div
          class="mx-3 block h-4 border-e border-stone-400 dark:border-stone-500"
        ></div>

        <div class="inline-flex">
          <button
            type="button"
            class="group inline-flex items-center rounded-lg p-2.5 text-dark hover:bg-orange-100 dark:text-stone-100 dark:hover:bg-stone-700"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="h-6 w-6 fill-none"
            >
              <path
                class="fill-current text-dark group-hover:text-secondary dark:text-stone-100 group-hover:dark:text-primary"
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0 1 11.186 0Z"
              ></path>
            </svg>
          </button>
        </div>
      </div>
      <!-- End Time/Bookmark -->
    </div>
    <!-- End Top Bar Container -->
  </section>

  <div class="mx-auto max-w-screen-lg">
    <div class="grid gap-y-8 lg:grid-cols-3 lg:gap-x-12 lg:gap-y-0">
      <div class="lg:col-span-2">
        <!-- Instructions Section -->
